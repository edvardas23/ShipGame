<Window x:Class="GameClient.MVVM.View.GameMode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game" xmlns:viewmodel="clr-namespace:GameClient.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="" Height="200" Width="200">
    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Width="100">
            <Button
                Name="classicModeButton"
                Content="Klasikinis"
                Click="classicModeButton_Click"
                />
            <Button
                Name="advancedModeButton"
                Content="Papildytas" Click="advancedModeButton_Click"/>
            <Button
                Name="ModeButton"
                Content="Turbo" Click="ModeButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
